		MENUITEM "E&xit",           ID_FILE_EXIT
	END
	POPUP "&CPU"
	BEGIN
		MENUITEM "Software &Reset", ID_CPU_SOFTWARERESET
		MENUITEM "Har&dware Reset", ID_CPU_HARDWARERESET
