BEGIN
	CTEXT "VPNES " VPNES_VERSION VPNES_BUILD "\nCopyright (c) Ivanov Viktor 2012-2013",
	IDC_STATIC, 7, 7, 186, 32
	LTEXT "", IDC_STATICINFO, 7, 46, 186, 43, 0, WS_EX_CLIENTEDGE
	DEFPUSHBUTTON "OK", IDCANCEL, 75, 96, 50, 14
END

