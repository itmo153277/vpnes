		MENUITEM "R&esume",         ID_CPU_RESUME
		MENUITEM "S&tep",           ID_CPU_STEP
		MENUITEM SEPARATOR
		MENUITEM "&Save State",     ID_CPU_SAVESTATE
		MENUITEM "&Load State",     ID_CPU_LOADSTATE
	END
	POPUP "&Help"
	BEGIN
		MENUITEM "&About",          ID_CPU_ABOUT
	END
END

